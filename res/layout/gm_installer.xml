    </ScrollView>
    <CheckBox android:textColor="#529577" android:id="@+id/checkUserInstall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/install_as_user_app" android:layout_weight="0.0" android:layout_alignParentLeft="true" />
    <LinearLayout android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/market_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="2dp" android:minWidth="120dp" android:text="@string/install" android:layout_weight="0.0" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
        <Button android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginTop="0dp" android:layout_marginRight="10dp" android:text="@string/mod_market_check" android:layout_weight="0.0" android:layout_alignParentBottom="true" android:onClick="mod_market_check" />
